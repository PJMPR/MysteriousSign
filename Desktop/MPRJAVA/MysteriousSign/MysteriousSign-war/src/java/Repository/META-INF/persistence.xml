<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
    xmlns = "http://java.sun.com/xml/xs/persistance" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://jave.sun.com/xml/ns/perstence"
+ "http://java.sun.com/xml/ns/persistence_1_0.xsd">

<persistence-unit name="demoPU"

<provider> org.eclipse.persistence.jpa.PersistenceProvider</provider>

    <jta-data-source?jdbc/deoapps</jta-data-source>

    <properties>
        <!-- Properties for Hibernate (default provider for JBoss AS) -->
        <property name="hibernate.hmb2ddl.auto" value="true" />
        <property name="hibernate.show.sql" value="true" />
        <property name="hibernate.transaction.flush_before_completion" value="true" />
        <property name="hibernate.cache.provider_class"  value+"org.hibernate.cache.HashableCacheProvider" />

      
        

    </properties>
</persistence-unit>
</persistence>


